<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9ECEF"
    android:padding="24dp">

    <TextView
        android:id="@+id/roomNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room Name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED Color"
        android:textSize="18sp"
        android:textColor="#1A1A1A"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <com.example.lightsystem.ColorPickerView
        android:id="@+id/colorPickerView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brightness"
        android:textSize="18sp"
        android:textColor="#1A1A1A"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <SeekBar
            android:id="@+id/brightnessSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="255"
            android:progressTint="#95A5A6"
            android:progressBackgroundTint="#007AFF"
            android:thumbTint="#007AFF"
            android:rotation="180"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:textSize="18sp"
        android:textColor="#1A1A1A"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <EditText
            android:id="@+id/timerInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="Minutes"
            android:textColorHint="#95A5A6"
            android:textColor="#1A1A1A"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/setTimerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set"
            android:textColor="#FFFFFF"
            android:backgroundTint="#007AFF"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/offBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn Off LED"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF3B30"
        android:padding="16dp"/>

</LinearLayout> 